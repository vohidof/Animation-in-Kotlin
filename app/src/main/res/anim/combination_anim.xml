<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">

    <translate
        android:duration="2000"
        android:fromXDelta="-180"
        android:fromYDelta="-180"
        android:toXDelta="180"
        android:toYDelta="180" />

    <alpha
        android:duration="2000"
        android:fromAlpha="0.1"
        android:toAlpha="1" />

    <scale
        android:duration="2000"
        android:fromXScale="0.1"
        android:fromYScale="0.1"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toXScale="1"
        android:toYScale="1" />

    <rotate
        android:duration="2000"
        android:fromDegrees="-7200"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toDegrees="0" />

</set>